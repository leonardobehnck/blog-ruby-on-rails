<div id="<%= dom_id post %>">
  <p>
    <strong>Título do Livro:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Autor do Livro:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Avaliação:</strong> 
    <%= post.rating %>
  </p>
  
  <p>
    <strong>Descrição do livro:</strong>
    <%= post.text %>
  </p>

</div>
